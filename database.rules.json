{
  "rules": {
    "usernames": {
      ".read": true,
      "$normalized": {
        ".write": "auth != null && ((root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true) || ((!data.exists() && newData.val() === auth.uid) || (data.exists() && data.val() === auth.uid && (!newData.exists() || newData.val() === auth.uid))))"
      }
    },
    "aliases": {
      ".read": true,
      "$normalized": {
        ".write": "auth != null && (newData.val() === auth.uid || data.val() === auth.uid)"
      }
    },
    "adminUids": {
      ".read": "auth != null",
      ".write": false
    },
    "meta": {
      "lastUserId": {
        ".read": "auth != null",
        ".write": "auth != null && newData.isNumber() && newData.val() >= 0 && (!data.exists() || newData.val() > data.val())"
      }
    },
    "siteConfig": {
      ".read": true,
      ".write": "auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true)"
    },
    "bannedUids": {
      ".read": "auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true)",
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true)"
      }
    },
    "bannedIPs": {
      ".read": true,
      "$ip": {
        ".write": "auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true)"
      }
    },
    "hardBannedUids": {
      ".read": "auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true)",
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true)"
      }
    },
    "profileViews": {
      ".read": true,
      "$uid": {
        ".read": true,
        ".write": "(newData.isNumber() && newData.val() >= 0) || (auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true))"
      }
    },
    "users": {
      ".read": "auth != null && (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true)",
      "$uid": {
        ".read": true,
        ".write": "auth != null && (auth.uid == $uid || (root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true))",
        "badges": {
          "$badgeKey": {
            ".write": "auth != null && ((root.child('adminUids').child(auth.uid).exists() || root.child('users').child(auth.uid).child('badges').child('staff').val() === true) || (auth.uid == $uid && ($badgeKey === 'community' || newData.val() === false || data.val() === true)))"
          }
        },
        "stats": {
          "views": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          }
        }
      }
    }
  }
}
